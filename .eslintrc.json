{
    "env": {
        "browser": true,
        "es2020": true,
        "node": 1
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": 0,
        "quotes": [2, "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js"
                ]
            }
        ],
        "linebreak-style": "off",
        "prefer-destructuring": [
            "error",
            {
                "object": true,
                "array": false
            }
        ]
    }
}